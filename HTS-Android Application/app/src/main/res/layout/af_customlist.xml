<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="6dp"
    app:contentPadding="6dp"
    android:layout_margin="3dp"
    android:focusable="true"
    android:scrollbars="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:focusable="true"
        android:scrollbars="horizontal|vertical"
        app:cardCornerRadius="12dp"
        app:contentPadding="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fileid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="File ID"
                android:textColor="#1c92d2"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/arrivaltime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fileid"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Arrival Time"
                android:textColor="#1c92d2"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/arrivaltime"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Remark"
                android:textColor="#1c92d2"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/alertbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/remark"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:background="#1c92d2"
                android:text="Send Alert"
                android:textColor="@color/cardview_light_background" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>

